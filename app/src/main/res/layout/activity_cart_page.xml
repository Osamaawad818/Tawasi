<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartPage"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textSize="@dimen/_20sdp"
        android:textColor="#000"
        android:layout_gravity="top|center"
        android:layout_marginTop="@dimen/_10sdp"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Added Meals"
            android:textColor="#000"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Burger"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shawerma"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginRight="@dimen/_5sdp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_180sdp"
        android:background="#fff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of order request"
            android:textSize="@dimen/_18sdp"
            android:textColor="#000"
            android:layout_margin="@dimen/_5sdp"/>

        <CheckBox
            android:id="@+id/Take_Away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Away"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_25sdp"/>

        <CheckBox
            android:id="@+id/CB_At_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At restaurant"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_120sdp"/>

        <Spinner
            android:id="@+id/spinner_Add_Time"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_25sdp"/>
    </FrameLayout>

    <Button
        android:id="@+id/btn_Confirm_Order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/button_items"
        android:text="Confirm Order"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:layout_gravity="bottom"/>
</FrameLayout>