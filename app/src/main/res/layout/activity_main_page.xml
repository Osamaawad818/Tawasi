<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAWASI"
                android:textSize="@dimen/_35sdp"
                android:textColor="#FDBF00"
                android:layout_gravity="left|top"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deliver To"
                android:textSize="@dimen/_16sdp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="top|left"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:id="@+id/txt_Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name and Details"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="#FDBF00"
                    android:layout_gravity="top|left" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_action_go_customer_details"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/large"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offers"
                android:textColor="#000"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/VP_Offers"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <Button
                android:id="@+id/btn_Start_Deliver"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="bottom"
                android:text="Start Deliver"
                android:textColor="#fff"
                android:textSize="@dimen/_18sdp"
                android:background="@drawable/btn_deliver"
                android:onClick="StartDeliver"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_50sdp"/>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:background="@drawable/fram_bottombar_design">

    <FrameLayout
        android:id="@+id/F_Food"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="left|center"
        android:layout_marginLeft="@dimen/_10sdp">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_action_food"
            android:layout_gravity="center|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:layout_gravity="center|bottom"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/F_Type"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="left|center"
        android:layout_marginLeft="@dimen/_95sdp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_action_food"
            android:layout_gravity="center|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Types"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:layout_gravity="center|bottom"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/F_Search"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_95sdp">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_action_search"
            android:layout_gravity="center|top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:layout_gravity="center|bottom"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/F_Profile"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="right|center"
        android:layout_marginRight="@dimen/_10sdp">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_action_account"
            android:layout_gravity="center|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:layout_gravity="center|bottom"/>
    </FrameLayout>
</FrameLayout>
</FrameLayout>