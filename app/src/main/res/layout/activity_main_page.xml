<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAWASI"
        android:textSize="@dimen/_30sdp"
        android:textColor="#FDBF00"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deliver To"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="top|left"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_20sdp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_100sdp">
            <TextView
                android:id="@+id/txt_Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name and Details"
                android:textSize="@dimen/_16sdp"
                android:textColor="#FDBF00"
                android:layout_gravity="top|left" />

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/ic_action_go_customer_details"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Deliver"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_login_design"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/VP_Offers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_50sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offers"
        android:textColor="#000"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:layout_gravity="center|left"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_20sdp"/>
</FrameLayout>